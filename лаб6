CleaningTool.java


/**
* –ö–ª–∞—Å, —â–æ –æ–ø–∏—Å—É—î –ø—Ä–µ–¥–º–µ—Ç –¥–ª—è –ø—Ä–∏–±–∏—Ä–∞–Ω–Ω—è.
*/
public class CleaningTool implements HouseholdItem {
   private String toolName;
   private double price;

   public CleaningTool(String name, double price) {
       this.toolName = name;
       this.price = price;
   }

   public double getPrice() {
       return price;
   }

   @Override
   public int compareTo(HouseholdItem other) {
       return Double.compare(this.price, other.getPrice());
   }

   @Override
   public void print() {
       System.out.println("üß¥ –Ü–Ω—Å—Ç—Ä—É–º–µ–Ω—Ç: " + toolName + ", –¶—ñ–Ω–∞: " + price + " –≥—Ä–Ω");
   }
}





HouseholdBag.java

import java.util.*;

/**
* –ü–∞—Ä–∞–º–µ—Ç—Ä–∏–∑–æ–≤–∞–Ω–∏–π –∫–ª–∞—Å HouseholdBag, —è–∫–∏–π –º–æ–¥–µ–ª—é—î –ø–æ–±—É—Ç–æ–≤–∏–π –ø–∞–∫–µ—Ç.
* @param <T> —Ç–∏–ø –µ–ª–µ–º–µ–Ω—Ç—ñ–≤, —è–∫—ñ —Ä–µ–∞–ª—ñ–∑—É—é—Ç—å —ñ–Ω—Ç–µ—Ä—Ñ–µ–π—Å HouseholdItem
*/
public class HouseholdBag<T extends HouseholdItem> {
   private ArrayList<T> items;

   /** –ö–æ–Ω—Å—Ç—Ä—É–∫—Ç–æ—Ä —Å—Ç–≤–æ—Ä—é—î –ø–æ—Ä–æ–∂–Ω—ñ–π –ø–∞–∫–µ—Ç */
   public HouseholdBag() {
       items = new ArrayList<>();
   }

   /** –î–æ–¥–∞—î –ø—Ä–µ–¥–º–µ—Ç —É –ø–∞–∫–µ—Ç */
   public void addItem(T item) {
       items.add(item);
       System.out.print("‚úÖ –î–æ–¥–∞–Ω–æ –ø—Ä–µ–¥–º–µ—Ç: ");
       item.print();
   }

   /** –í–∏–¥–∞–ª—è—î –ø—Ä–µ–¥–º–µ—Ç –∑–∞ —ñ–Ω–¥–µ–∫—Å–æ–º */
   public void removeItem(int index) {
       if (index >= 0 && index < items.size()) {
           System.out.print("‚ùå –í–∏–¥–∞–ª–µ–Ω–æ –ø—Ä–µ–¥–º–µ—Ç: ");
           items.get(index).print();
           items.remove(index);
       } else {
           System.out.println("‚ö†Ô∏è –ù–µ–≤—ñ—Ä–Ω–∏–π —ñ–Ω–¥–µ–∫—Å!");
       }
   }

   /** –ü–æ–≤–µ—Ä—Ç–∞—î –º–∞–∫—Å–∏–º–∞–ª—å–Ω–∏–π –ø—Ä–µ–¥–º–µ—Ç –∑–∞ –≤–∞—Ä—Ç—ñ—Å—Ç—é */
   public T findMax() {
       if (items.isEmpty()) return null;
       T max = items.get(0);
       for (T item : items) {
           if (item.compareTo(max) > 0) {
               max = item;
           }
       }
       return max;
   }

   /** –í–∏–≤–æ–¥–∏—Ç—å —É—Å—ñ –ø—Ä–µ–¥–º–µ—Ç–∏ –ø–∞–∫–µ—Ç—É */
   public void showAll() {
       for (T item : items) {
           item.print();
       }
   }
}




HouseholdBagDriver.java
/****************************************************************************
